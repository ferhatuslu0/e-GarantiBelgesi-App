<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/bottomSheetContainer2"
    android:orientation="vertical"
    android:background="@drawable/bottom_sheet_frm"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="15dp"
        android:text="Şikayetini Bize Açıklayın."
        android:textSize="18sp"
        android:textStyle="bold"></TextView>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"></View>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:focusable="true"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:background="@color/ColorBlueDark"
        android:padding="12dp">
        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="25dp"
            android:textColor="#FFFFFF"
            android:textSize="15sp"
            android:text="Ürün Kodu : "></TextView>
        <TextView
            android:id="@+id/frmUrunKod"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="25dp"
            android:textColor="#FFFFFF"
            android:textSize="15sp"
            ></TextView>
    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="1dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:focusable="true"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:background="@color/ColorBlueDark"
        android:padding="12dp">
        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="25dp"
            android:textColor="#FFFFFF"
            android:textSize="15sp"
            android:text="Ürün Adı : "></TextView>
        <TextView
            android:id="@+id/frmUrunAd"
            android:layout_width="240dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="25dp"
            android:textColor="#FFFFFF"
            android:textSize="15sp"
            ></TextView>
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="1dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:focusable="true"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:background="@color/ColorBlueDark"
        android:padding="12dp">

        <EditText
            android:id="@+id/frmSikayet"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:hint="Şikayetlerinizi yazınız!"
            android:textColor="#FFFFFF"
            android:textColorHint="#FFFFFF"></EditText>
    </LinearLayout>
    <Button
        android:text="Gönder"
        android:layout_marginTop="10dp"
        android:id="@+id/frmGonder"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:shadowColor="@color/ColorBlue"
        android:textColor="#FFFF"
        android:textAllCaps="true"
        android:color="#000000"
        android:background="@drawable/custom_button2"/>



</LinearLayout>